---
import Waves from "../components/waves";
import Layout from "../layouts/Layout.astro";
import "../styles/_base.scss";
---

<Layout>
  <div class="container">
    <div class="innerContainer">
      
    </div>
    <Waves client:load />
  </div>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    align-items: center;
    overflow-y: auto;
  }

  .innerContainer {
    position: relative;
    flex-grow: 1;
  }

  @media (width >= 40rem) {
    .container {
      height: 100lvh;
    }
  }
</style>
