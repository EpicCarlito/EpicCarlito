---
import Waves from "../components/waves";
import Layout from "../layouts/Layout.astro";
import "../styles/_base.scss";
import Home from "./home.astro";
---

<Layout>
  <div class="container">
    <Home />
    <Waves client:load />
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    align-items: center;
    overflow-y: auto;
  }

  @media (width >= 40rem) {
    .container {
      height: 100lvh;
    }
  }
</style>
